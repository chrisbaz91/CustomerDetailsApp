@model CustomerDetailsApp.ViewModels.EditModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<input id="Id" type="hidden" value="@Model.Id" />
<input id="IndexUrl" type="hidden" value="@Url.Action("Index", "Customers")" />
<input id="DeleteUrl" type="hidden" value="@Url.Action("Delete", "Customers")" />

<form asp-controller="Customers" asp-action="Edit">
    <partial name="_Fields.cshtml"></partial>
</form>

@section Scripts {
	@{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
